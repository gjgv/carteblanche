<li class="large-3 medium-4 small-12 column">
  <div class="macaron-card padly">
    <%= link_to macaron, class: "icon" do %>
      <%= image_tag macaron.icon %>
    <% end %>
    <div class="macaron-info ell glassy-bg padmy padlx">
      <div class="title">
        <h6><%= macaron.name %></h6>
      </div>
      <p class="left price label macaron-label radius">Php <%= macaron.price %></p>
        <br />
        <br />
        <%if macaron.stock > 0%>
        <p>Stocks available: <%= macaron.stock %></p>
          <%if signed_in?%>
            <%= form_for @order_item, remote: true do |f| %>
            <div class="right radius">
              <%= f.number_field :quantity, value: 1, class: "form-control", min: 1, max: macaron.stock %>
              <div class="right radius">
                <i class="fi-shopping-cart"></i>
                <%= f.hidden_field :macaron_id, value: macaron.id %>
                <%= f.submit "Add to Cart", class: "button" %>
              </div>
            </div>
            <%end%>
            <%else%>
          <%end%>
        <%else%>
          <p>Out of Stock</p>
        <%end%>
    </div>
  </div>
</li>